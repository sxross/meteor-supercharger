template(name="chargers")
  if empty
    +no_chargers
  else
    .row
      .col-xs-12
        |{{pluralize charger_count 'charger'}} found in your search area.
    each list
      .row
        +charger
    //
      +if moreResults
        .row#showMoreResults(style="margin-left: 25px;")
          span.loading Loading...

template(name="no_chargers")
  .jumbotron
    h2 
      |I don't see any superchargers.
      if userId
        |That's because something is terribly wrong.
      else
        |That's because you aren't logged in.
      
